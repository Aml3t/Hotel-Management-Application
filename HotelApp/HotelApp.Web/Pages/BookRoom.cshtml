@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book A Room";
}

<h1>Book A Room</h1>

<h2>Room Title</h2>

<p>
    Room Description
</p>


<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName" />
        <input asp-for="@Model.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName" />
        <input asp-for="@Model.LastName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.StartDate" />
        <input asp-for="@Model.StartDate" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate" />
        <input asp-for="@Model.EndDate" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.RoomTypeId" />
        <label asp-for="@Model.RoomTypeId" />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>


<table>
    <thead>
        <tr>
            <th><strong>Check in Date</strong></th>
            <th><strong>Check out Date</strong></th>
            <th><strong>First Name</strong></th>
            <th><strong>Last Name</strong></th>
            <th><strong>Room Type</strong></th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>

        </tr>
    </tbody>
</table>



